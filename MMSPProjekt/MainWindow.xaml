<Window x:Class="MMSPProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMSPProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock x:Name="_formHeader">Dodaj piosenkę do listy!</TextBlock>

            <Label>Wpisz tytuł:</Label>
            <TextBox x:Name="_title"></TextBox>

            <Label>Wpisz wykonawcę:</Label>
            <TextBox x:Name="_author"></TextBox>

            <TextBlock x:Name="_wynik" ></TextBlock>
    
            <Label>Wpisz Długość:</Label>
            <TextBox x:Name="_length"></TextBox>

            <Button Click="DodajEl" Width="80" Height="50">Dodaj</Button>
        </StackPanel>

        <ListView x:Name="_songs" Grid.Column="1">

        </ListView>

        <ListView x:Name="_favs"  ></ListView>

    </Grid>
</Window>
